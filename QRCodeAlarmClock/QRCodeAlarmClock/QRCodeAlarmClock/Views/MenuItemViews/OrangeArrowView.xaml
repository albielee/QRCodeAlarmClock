<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRCodeAlarmClock.Views.MenuItemViews.OrangeArrowView">
  <ContentView.Content>
        <Grid>
            <BoxView HeightRequest="15"
                                 TranslationX="-10"
                                 TranslationY="-4"
                                 WidthRequest="4"
                                 Rotation="45"
                                 CornerRadius="1"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Start"
                                 BackgroundColor="{StaticResource Orange}"/>
            <BoxView HeightRequest="15"
                                 TranslationY="4"
                                 TranslationX="-10"
                                 WidthRequest="4"
                                 Rotation="-45"
                                 CornerRadius="1"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Start"
                                 BackgroundColor="{StaticResource Orange}"/>
        </Grid>
  </ContentView.Content>
</ContentView>